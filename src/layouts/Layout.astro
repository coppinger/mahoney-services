---
interface Props {
    title: string;
}

import "$lib/styles/app.css";

import PostHog from "../components/posthog.astro";

import { SEOMetadata } from "astro-seo-metadata";

const { title } = Astro.props;

import { Image } from "astro:assets";

import brandmark from "/src/images/brandmark.png";

import meta_image from "/src/images/meta-image.jpg";
import favicon from "/src/images/favicon.png";

import "@fontsource-variable/plus-jakarta-sans";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <SEOMetadata
            siteName={"Mahni Ventures"}
            title={title}
            description={"Global Super Connector — building brands, scaling communities, and opening doors at the intersection of strategy, culture, and growth."}
            image={meta_image.src}
            favicon={favicon.src}
            author="Mahni"
            copyright="© 2026 Mahni Ventures. All rights reserved."
            astroSitemap={true}
            canonicalUrl={Astro.url.toString()}
            type={"website"}
            astroGenerator={true}
        />
        <PostHog />
    </head>
    <body class="bg-neutral-50">
        <div
            class="hidden md:flex bg-white h-14 border-b border-dashed border-neutral-300"
        >
            <!-- Top bar -->
            <div
                class="max-w-screen-xl w-full flex items-center justify-between mx-auto p-5"
            >
                <a href="/">Mahni Ventures</a>
                <div class="flex items-center gap-10">
                    <a class="underline" href="/#services">Services</a>
                    <!-- TODO: add a booking page link with an embeded cal.com widget -->
                    <a class="underline" href="/book-a-call"
                        >Book a call -&gt;</a
                    >
                </div>
            </div>
        </div>
        <main
            class="max-w-screen-xl p-5 md:py-20 relative grid grid-cols-3 md:grid-cols-8 gap-20 md:gap-y-20 md:gap-x-0 md:mx-auto md:w-full"
        >
            <div
                class="col-span-3 md:col-span-8 grid md:grid-cols-8 grid-cols-3"
            >
                <a href="/">
                    <Image
                        src={brandmark}
                        alt="Brandmark"
                        loading={"eager"}
                        class="col-span-1"
                    /></a
                >
            </div>
            <slot />
            <div
                class="max-w-screen-xl fixed -z-10 top-0 w-full px-5 h-screen border-dashed border-neutral-300 grid grid-cols-3 md:grid-cols-8 left-1/2 transform -translate-x-1/2"
            >
                <div
                    class="grid-cols-1 border-l border-dashed border-neutral-300 h-full"
                >
                </div>
                <div
                    class="grid-cols-1 border-l border-dashed border-neutral-300 h-full"
                >
                </div>
                <div
                    class="grid-cols-1 border-x md:border-l md:border-r-0 border-dashed border-neutral-300 h-full"
                >
                </div>
                <!-- extra 5 columns bigger viewports -->
                <div
                    class="hidden md:block grid-cols-1 border-l border-dashed border-neutral-300 h-full"
                >
                </div>
                <div
                    class="hidden md:block grid-cols-1 border-l border-dashed border-neutral-300 h-full"
                >
                </div>
                <div
                    class="hidden md:block grid-cols-1 border-x border-dashed border-neutral-300 h-full"
                >
                </div>
                <div
                    class="hidden md:block grid-cols-1 border-r border-dashed border-neutral-300 h-full"
                >
                </div>
                <div
                    class="hidden md:block grid-cols-1 border-r border-dashed border-neutral-300 h-full"
                >
                </div>
            </div>
        </main>
        <footer class="flex flex-col gap-10 col-span-3 py-20 items-center p-5">
            <Image src={brandmark} alt="Brandmark" width={155} />
            <div class="flex items-center gap-4">
                <a
                    href="[TWITTER_URL]"
                    target="_blank"
                    aria-label="Twitter"
                    class="hover:opacity-70 transition-opacity"
                >
                    <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231 5.45-6.231Zm-1.161 17.52h1.833L7.084 4.126H5.117L17.083 19.77Z"
                            fill="#525252"></path>
                    </svg>
                </a>
                <a
                    href="[LINKEDIN_URL]"
                    target="_blank"
                    aria-label="LinkedIn"
                    class="hover:opacity-70 transition-opacity"
                >
                    <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                            fill="#525252"></path>
                    </svg>
                </a>
            </div>
            <p class="text-center">
                [LOCATION]
            </p>
        </footer>
        <div
            class="hidden md:block bg-white h-14 border-t border-dashed border-neutral-300"
        >
        </div>
    </body>
</html>
