---
import { Button } from "$lib/components/ui/button";

import { Image } from "astro:assets";

import side_photo from "src/images/new-side-photo.png";

import bg_mockups from "src/images/bg-mockups.png";

let { title } = Astro.props;

import Layout from "$lib/layouts/Layout.astro";
---

<Layout title="Mahni Ventures — Super Connector">
    <div
        class="flex md:hidden fixed z-20 bottom-0 left-0 w-full border border-t border-neutral-300 border-dashed bg-neutral-50 bg-opacity-50 backdrop-blur-md p-4 gap-4"
    >
        <Button href="#services" class="w-full" variant="outline"
            >Services</Button
        >
        <Button href="/book-a-call" class="w-full">Book a call -&gt;</Button>
    </div>
    <div
        class="flex flex-col gap-10 col-span-3 md:col-span-8 md:grid md:grid-cols-8 md:gap-y-6 md:gap-x-0 md:auto-rows-min md:pb-16"
    >
        <div
            class="hidden md:block md:col-start-7 md:col-span-2 md:row-start-1 relative"
        >
            <Image
                src={side_photo}
                loading={"eager"}
                alt="A black and white portait of me sat on a chair, looking to the right—there's a faint hint that I might be thinking about something profound, but unfortunately, I can assure you that I was not."
                class="w-full absolute top-0 left-0 object-cover "
            />
        </div>
        <div class="sm:col-span-2 md:col-span-4 md:row-start-1">
            <h1 class="text-5xl font-black inline-block mb-5">
                Hey, my name is Mahni & I'm a global Super Connector
            </h1>
        </div>
        <div class="md:col-span-4 md:col-start-3 md:row-start-2 md:h-fit flex flex-col gap-4">
            <p>
                I believe in the power of partnerships to unlock limitless possibilities for society, humanity, and culture.
            </p>
            <p>
                I build brands, scale communities, and open doors like it's a sport. I work at the intersection of strategy, culture, and growth, helping founders and teams turn bold ideas into momentum.
            </p>
            <p>
                My background spans govt, emerging tech, venture and consumer CPG with a focus on brand, partnerships, and signal over noise. I've led growth at Web3 pioneers, built developer and community ecosystems ahead of market adoption, and co-founded culture-driven consumer brands.
            </p>
        </div>

        <div
            class="hidden md:block md:col-span-1 md:col-start-5 md:row-start-3 md:mt-4"
        >
            <Button href="/book-a-call" class="w-full">Book a call -&gt;</Button
            >
        </div>
    </div>

    <div
        class="col-span-3 md:col-span-8 px-5 border border-dashed border-neutral-300 bg-neutral-50"
    >
        <div class="marquee marquee--8">
            <span class="marquee__item font-bold text-neutral-700 text-lg tracking-wide">HXOUSE</span>
            <span class="marquee__item font-bold text-neutral-700 text-lg tracking-wide">LISA FOUNDATION</span>
            <span class="marquee__item font-bold text-neutral-700 text-lg tracking-wide">TAHO WALLET</span>
            <span class="marquee__item font-bold text-neutral-700 text-lg tracking-wide">LIVEPEER</span>
            <span class="marquee__item font-bold text-neutral-700 text-lg tracking-wide">CONSENSYS</span>
            <span class="marquee__item font-bold text-neutral-700 text-lg tracking-wide">RIPPLE</span>
            <span class="marquee__item font-bold text-neutral-700 text-lg tracking-wide">BLOCKDAEMON</span>
            <span class="marquee__item font-bold text-neutral-700 text-lg tracking-wide">WONDERSCIENCES</span>
        </div>
    </div>
    <div
        class="bg-neutral-50 border border-neutral-300 border-dashed col-span-3 md:col-span-8 gap-5 flex flex-col md:p-20 md:pb-10 md:gap-10 relative overflow-hidden"
    >
        <div
            class="hidden md:block absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full h-full"
        >
            <Image
                src={bg_mockups}
                loading={"eager"}
                alt="Example mockups of product design work that I've completed in the past"
            />
        </div>
        <div
            class="bg-white border-b md:border border-dashed border-neutral-300 px-5 py-10 md:p-20 w-fit mx-auto md:bg-[#fff0] md:bg-opacity-50 md:backdrop-blur-lg"
        >
            <div
                class="text-base md:text-2xl font-semibold text-netural-900 text-center w-fit leading-relaxed md:leading-9"
            >
                [TESTIMONIAL_QUOTE]
            </div>
        </div>
        <div
            class="flex md:flex-col gap-5 md:gap-10 items-center place-self-center pb-5"
        >
        <div class="flex flex-col justify-center items-center gap-2">
            <div class="relative z-100 size-20 bg-neutral-200 rounded-full flex items-center justify-center">
                <span class="text-neutral-500 text-2xl">[IMG]</span>
            </div>
            <div class="text-center flex flex-col items-center justify-center gap-2">
                <p class="text-neutral-900 font-semibold text-2xl">[CLIENT_NAME]</p>
                <p class="px-4 md:px-0">[CLIENT_TITLE]</p>
            </div>
        </div>
        </div>
    </div>
    <div class="flex flex-col gap-y-20 col-span-3 md:col-span-8">
        <div
            class="md:grid md:grid-cols-8 flex flex-col gap-10 md:gap-y-20 md:gap-x-0"
            id="services"
        >
            <h2
                class="text-4xl font-bold text-neutral-900 md:row-start-1 md:col-span-3 md:col-start-2"
            >
                Services
            </h2>
            <ul
                class="flex flex-col gap-10 md:row-start-2 md:col-span-5 md:col-start-2"
            >
                <li class="flex flex-col gap-4">
                    <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM4 12C4 11.39 4.08 10.79 4.21 10.22L8 14V15C8 16.1 8.9 17 10 17V19.93C6.61 19.43 4 16.07 4 12ZM17.89 17.4C17.63 16.59 16.89 16 16 16H15V13C15 12.45 14.55 12 14 12H8V10H10C10.55 10 11 9.55 11 9V7H13C14.1 7 15 6.1 15 5V4.59C17.93 5.78 20 8.65 20 12C20 14.08 19.19 15.98 17.89 17.4Z"
                            fill="#1C1B1F"></path>
                    </svg>
                    <h3 class="text-2xl font-black text-neutral-800">
                        Strategy, Fundraising & Partnerships
                    </h3>
                    <p>
                        Capital, connections, and clarity — helping you raise, align, and build the relationships that move the needle.
                    </p>
                </li>
                <li class="flex flex-col gap-4">
                    <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            d="M19 3H5C3.9 3 3 3.9 3 5V19C3 20.1 3.9 21 5 21H19C20.1 21 21 20.1 21 19V5C21 3.9 20.1 3 19 3ZM9 17H7V10H9V17ZM13 17H11V7H13V17ZM17 17H15V13H17V17Z"
                            fill="#1C1B1F"></path>
                    </svg>
                    <h3 class="text-2xl font-black text-neutral-800">
                        Experience + Program Design
                    </h3>
                    <p>
                        Summits, immersions, and IRL activations — creating moments that forge real connections and lasting impact.
                    </p>
                </li>
                <li class="flex flex-col gap-4">
                    <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            d="M16 11C17.66 11 18.99 9.66 18.99 8C18.99 6.34 17.66 5 16 5C14.34 5 13 6.34 13 8C13 9.66 14.34 11 16 11ZM8 11C9.66 11 10.99 9.66 10.99 8C10.99 6.34 9.66 5 8 5C6.34 5 5 6.34 5 8C5 9.66 6.34 11 8 11ZM8 13C5.67 13 1 14.17 1 16.5V19H15V16.5C15 14.17 10.33 13 8 13ZM16 13C15.71 13 15.38 13.02 15.03 13.05C16.19 13.89 17 15.02 17 16.5V19H23V16.5C23 14.17 18.33 13 16 13Z"
                            fill="#1C1B1F"></path>
                    </svg>
                    <h3 class="text-2xl font-black text-neutral-800">
                        Audience/User Research + Education
                    </h3>
                    <p>
                        Access over abstraction — understanding your users deeply and translating insights into action.
                    </p>
                </li>
                <li class="flex flex-col gap-4">
                    <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            d="M3 17V19H9V17H3ZM3 5V7H13V5H3ZM13 21V19H21V17H13V15H11V21H13ZM7 9V11H3V13H7V15H9V9H7ZM21 13V11H11V13H21ZM15 9H17V7H21V5H17V3H15V9Z"
                            fill="#404040"></path>
                    </svg>
                    <h3 class="text-2xl font-black text-neutral-800">
                        Brand, Narrative + Communications
                    </h3>
                    <p>
                        Story as leverage — translating across industries, communities and culture to position you where you belong.
                    </p>
                </li>
                <li class="flex flex-col gap-4">
                    <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.81 3.98-2.1 5.39z"
                            fill="#1C1B1F"></path>
                    </svg>
                    <h3 class="text-2xl font-black text-neutral-800">
                        Community + Ecosystem Growth
                    </h3>
                    <p>
                        Belonging that scales — building communities that power retention and turn users into advocates.
                    </p>
                </li>
            </ul>
        </div>

        <!-- Case Studies Section -->
        <div
            class="md:grid md:grid-cols-8 flex flex-col gap-10 md:gap-y-10 md:gap-x-0"
            id="case-studies"
        >
            <h2
                class="text-4xl font-bold text-neutral-900 md:row-start-1 md:col-span-4 md:col-start-2"
            >
                Selected Work
            </h2>
            <div class="md:row-start-2 md:col-span-5 md:col-start-2 grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="flex flex-col gap-4 p-6 border border-dashed border-neutral-300 bg-white">
                    <h3 class="text-xl font-black text-neutral-800">
                        WONDER SCIENCES
                    </h3>
                    <p class="text-sm">
                        Helped bring together a high-caliber group of participants for an Antarctic expedition, shaping a transformative journey balancing scientific rigor and human connection in one of the most extreme environments on Earth.
                    </p>
                </div>
                <div class="flex flex-col gap-4 p-6 border border-dashed border-neutral-300 bg-white">
                    <h3 class="text-xl font-black text-neutral-800">
                        HXOUSE LABS
                    </h3>
                    <p class="text-sm">
                        Delivered immersive experience design and Gen Z-focused education for emerging tech, specifically Web3, for the globally recognized incubator founded by The Weeknd and the XO Brand.
                    </p>
                </div>
                <div class="flex flex-col gap-4 p-6 border border-dashed border-neutral-300 bg-white">
                    <h3 class="text-xl font-black text-neutral-800">
                        LISA FOUNDATION
                    </h3>
                    <p class="text-sm">
                        Turned an early cultural vision into a clear market position, membership model, and go-to-market foundation.
                    </p>
                </div>
                <div class="flex flex-col gap-4 p-6 border border-dashed border-neutral-300 bg-white">
                    <h3 class="text-xl font-black text-neutral-800">
                        TAHO WALLET
                    </h3>
                    <p class="text-sm">
                        Led early believer research, brand narrative, and community-led growth strategy — translating insight into product-ready signal and sustained retention for this leading Web3 browser wallet.
                    </p>
                </div>
            </div>
        </div>

        <!-- Speaking Engagements Section -->
        <div
            class="md:grid md:grid-cols-8 flex flex-col gap-10 md:gap-y-10 md:gap-x-0"
            id="speaking"
        >
            <h2
                class="text-4xl font-bold text-neutral-900 md:row-start-1 md:col-span-4 md:col-start-2"
            >
                Speaking + Facilitation
            </h2>
            <div class="md:row-start-2 md:col-span-5 md:col-start-2">
                <ul class="flex flex-col gap-4">
                    <li class="flex flex-col gap-1 py-3 border-b border-dashed border-neutral-300">
                        <span class="font-bold text-neutral-800">HXOUSE LABS — Oasis OnChain</span>
                        <span class="text-sm text-neutral-600">Consumer crypto workshops on Emerging Markets, Global South, and Web3 impact. Nassau, Bahamas</span>
                    </li>
                    <li class="flex flex-col gap-1 py-3 border-b border-dashed border-neutral-300">
                        <span class="font-bold text-neutral-800">ETH Hong Kong</span>
                        <span class="text-sm text-neutral-600">Speaking engagement and workshop on consumer crypto apps and finding product-market fit</span>
                    </li>
                    <li class="flex flex-col gap-1 py-3 border-b border-dashed border-neutral-300">
                        <span class="font-bold text-neutral-800">SpaghettETH</span>
                        <span class="text-sm text-neutral-600">Consumer crypto workshop on finding PMF</span>
                    </li>
                    <li class="flex flex-col gap-1 py-3 border-b border-dashed border-neutral-300">
                        <span class="font-bold text-neutral-800">NFT Berlin</span>
                        <span class="text-sm text-neutral-600">Workshop on NFTs for impact, analyzing successful projects and their key drivers</span>
                    </li>
                    <li class="flex flex-col gap-1 py-3 border-b border-dashed border-neutral-300">
                        <span class="font-bold text-neutral-800">ETH Barcelona</span>
                        <span class="text-sm text-neutral-600">Workshop on mental health and resiliency while working in DAOs and the Web3 ecosystem</span>
                    </li>
                    <li class="flex flex-col gap-1 py-3 border-b border-dashed border-neutral-300">
                        <span class="font-bold text-neutral-800">ETH Denver</span>
                        <span class="text-sm text-neutral-600">Designed and hosted an experience alongside the main summit, fostering real connections and friendships in Web3</span>
                    </li>
                    <li class="flex flex-col gap-1 py-3 border-b border-dashed border-neutral-300">
                        <span class="font-bold text-neutral-800">SXSW</span>
                        <span class="text-sm text-neutral-600">Panel on Open Data, Blockchain, and Government</span>
                    </li>
                    <li class="flex flex-col gap-1 py-3 border-b border-dashed border-neutral-300">
                        <span class="font-bold text-neutral-800">Copenhagen Tech Festival — CPH150</span>
                        <span class="text-sm text-neutral-600">Co-facilitated discussion on Ethical Tech Charters and reshaping the industry's commitment to ethics</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <style>
        .marquee {
            display: flex;
            block-size: var(--marquee-item-height);
            margin-block: var(--marquee-item-height);
            position: relative;
            overflow: hidden;
            mask-image: linear-gradient(
                to right,
                hsl(0 0% 0% / 0),
                hsl(0 0% 0% / 1) 20%,
                hsl(0 0% 0% / 1) 80%,
                hsl(0 0% 0% / 0)
            );
            grid-column: span 3 / span 3;
        }

        .marquee--8 {
            --marquee-item-width: 160px;
            --marquee-item-height: 36px;
            --marquee-duration: 36s;
            --marquee-items: 8;
        }

        .marquee--omega {
            --marquee-max-width: min(600px, 90vw);
            max-inline-size: var(--marquee-max-width);
            margin-inline: auto;
            mask-image: linear-gradient(
                to right,
                hsl(0 0% 0% / 0),
                hsl(0 0% 0% / 1) 10%,
                hsl(0 0% 0% / 1) 90%,
                hsl(0 0% 0% / 0)
            );
        }

        .marquee__item {
            --marquee-item-offset: max(
                calc(var(--marquee-item-width) * var(--marquee-items)),
                calc(100% + var(--marquee-item-width))
            );
            --marquee-delay: calc(
                var(--marquee-duration) / var(--marquee-items) *
                    (var(--marquee-items) - var(--marquee-item-index)) * -1
            );
            position: absolute;
            inset-inline-start: var(--marquee-item-offset);
            transform: translateX(-50%);
            animation: go linear var(--marquee-duration)
                var(--marquee-delay, 0s) infinite;
            white-space: nowrap;
        }

        .marquee--8 .marquee__item:nth-of-type(1) {
            --marquee-item-index: 1;
        }

        .marquee--8 .marquee__item:nth-of-type(2) {
            --marquee-item-index: 2;
        }

        .marquee--8 .marquee__item:nth-of-type(3) {
            --marquee-item-index: 3;
        }

        .marquee--8 .marquee__item:nth-of-type(4) {
            --marquee-item-index: 4;
        }

        .marquee--8 .marquee__item:nth-of-type(5) {
            --marquee-item-index: 5;
        }

        .marquee--8 .marquee__item:nth-of-type(6) {
            --marquee-item-index: 6;
        }

        .marquee--8 .marquee__item:nth-of-type(7) {
            --marquee-item-index: 7;
        }

        .marquee--8 .marquee__item:nth-of-type(8) {
            --marquee-item-index: 8;
        }

        @keyframes go {
            to {
                inset-inline-start: calc(var(--marquee-item-width) * -1);
            }
        }

        @media (prefers-reduced-motion) {
            .marquee {
                justify-content: space-evenly;
                mask-image: unset;
            }

            .marquee__item {
                position: unset;
                inset-inline-start: unset;
                transform: unset;
            }

            @keyframes go {
                to {
                    inset-inline-start: unset;
                }
            }
        }
    </style>
</Layout>
